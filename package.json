{
  "name": "aud.io",
  "version": "0.0.1",
  "description": "Node.js API server based on express project template.",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run build; npm run serve",
    "dev": ". devcredentials.sh; nodemon --exec babel-node ./src/index.js",
    "sanitycheck": "curl -X POST -H \"Content-Type: multipart/form-data\" -F \"file=@./test/test.mp3\" -F \"type=audio/mpeg\" 127.0.0.1:3000 >> output.mp3",
    "debug": "node --inspect-brk ./dist/index.js",
    "build": "babel src --out-dir ./dist --source-maps",
    "serve": "node ./dist/index.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "mocha --require @babel/register './@(test|src)/**/*.spec.js'",
    "coverage": "npx nyc --exclude '**/*.spec.js' --reporter=lcovonly --reporter=html npm run test",
    "doc": "npx jsdoc --recurse --destination ./doc --package ./package.json src"
  },
  "keywords": [
    "node",
    "nodejs",
    "API",
    "backend",
    "server",
    "express",
    "expressjs"
  ],
  "author": "Navaneet Ramabadran <nramabad@gmail.com>",
  "license": "Apache-2.0 WITH LLVM-exception",
  "repository": "github:nramabad/aud.io",
  "dependencies": {
    "@discordjs/opus": "^0.5.0",
    "aws-sdk": "^2.868.0",
    "busboy": "^0.3.1",
    "dotenv": "^8.2.0",
    "ffmpeg-static": "^4.2.8",
    "prism-media": "^1.2.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "dist"
    ]
  },
  "lint-staged": {
    "(src|test)/**/*.js": [
      "eslint --fix",
      "mocha --require @babel/register --bail './@(test|src)/**/*.spec.js'"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "directories": {
    "test": "test"
  }
}
